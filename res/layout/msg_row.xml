<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

    
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:descendantFocusability="blocksDescendants"
android:background="@drawable/round_grey_corners"
android:padding="4dp"
>


  
<com.android.volley.toolbox.NetworkImageView
      android:id="@+id/msgrow_profimg"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_marginRight="4dp"
      android:clickable="true"
      android:onClick="ClickName"
      android:scaleType="fitXY"
      android:adjustViewBounds="true" />
       
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="4dp" >
    
<TextView
    android:id="@+id/msgrow_username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:singleLine="true"
    android:textStyle="bold"
    android:gravity="center_vertical"
    android:clickable="true"
    android:textSize="19sp"
    android:textColorLink="#2f6699"  />

<com.rockerhieu.emojicon.EmojiconTextView
    android:id="@+id/msgrow_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:autoLink="web"
    android:ellipsize="end"
    android:textColor="#5a5a60"
    android:textSize="16sp" />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp" 
    android:gravity="top|right">

   <TextView
    android:id="@+id/msgrow_date_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:textColor="#5a5a60"
    android:textSize="12sp" />
    
  <ImageView
      android:id="@+id/msgrow_unread"
      android:layout_width="40dp"
      android:layout_height="22dp"
      />

  
</LinearLayout>
  
</LinearLayout>

</FrameLayout>


