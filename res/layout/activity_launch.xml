<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:shimmer="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/metro"
android:gravity="center_horizontal">

    

    <ScrollView    
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="#8333" 
        >
        
    <com.lethalsys.mimix.ShimmerLayout
      android:id="@+id/shimmer_view_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      shimmer:duration="1000">
        
 
     <LinearLayout
            style="@style/LoginFormContainer"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            
   <ImageView
    android:layout_width="230dip"
    android:layout_height="120dip"
    android:layout_gravity="center"
    android:layout_marginLeft="-10dip"
    android:scaleType="fitXY"
    android:src="@drawable/spoiler"
    android:adjustViewBounds="true" />
         
         
         
            <Button                
                android:id="@+id/launch_signup_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:onClick="startReg"
                android:layout_marginTop="20dp"
                android:background="@drawable/post_btn2"
                android:paddingBottom="5dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="5dp"
                android:text="Sign up"
                android:textColor="#ffffff"
                android:textSize="15sp" />
            
              <Button
                  android:id="@+id/launch_fb_button"
                  android:layout_width="match_parent"
                  android:layout_height="36dp"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/xml_blue_button3"
                  android:drawableLeft="@drawable/facebook"
                  android:onClick="go_login"
                  android:paddingBottom="5dp"
                  android:paddingLeft="32dp"
                  android:paddingRight="32dp"
                  android:paddingTop="5dp"
                  android:text="Connect with Facebook"
                  android:textColor="#ffffff"
                  android:textSize="15sp" />
              
               <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:text="ALREADY HAVE AN ACCOUNT?"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="12sp" />
      
              
              <Button
                android:id="@+id/launch_login_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/post_btn2"
                android:onClick="go_login"
                android:paddingBottom="5dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="5dp"
                android:text="Log in"
                android:textColor="#ffffff"
                android:textSize="15sp" />
      
            </LinearLayout>
            
     </com.lethalsys.mimix.ShimmerLayout>
            
     </ScrollView>  
          
    
</FrameLayout>   
   