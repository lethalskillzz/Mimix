<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#e6e5f3" />

            <stroke android:width="1dp" android:color="#e6e5f3" />
            

            <corners android:radius="3dp" />
 
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape android:shape="rectangle" android:padding="10dp">
        >
        
            <gradient android:angle="270" android:endColor="#d1cff9" android:startColor="#e6e5f3" />

            <stroke android:width="1dp" android:color="#041420" />

            <corners android:radius="4dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>